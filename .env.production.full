# Bizabode CRM Production Environment Variables
# ================================================
# Copy this file to .env and update the values for your production environment

# Application Environment
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/bizabode_crm
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=BizabodeSecure2024!
MONGO_DATABASE=bizabode_crm

# Authentication & Security
JWT_SECRET=BizabodeCRM_JWT_Secret_2024_Production_Secure_Key_Minimum_32_Characters
NEXTAUTH_SECRET=BizabodeCRM_NextAuth_Secret_2024_Production_Secure_Key_Minimum_32_Characters
NEXTAUTH_URL=https://your-domain.com

# Session Configuration
SESSION_TIMEOUT=86400000
BCRYPT_ROUNDS=12

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Security Settings
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_REQUEST_LOGGING=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Business Configuration
COMPANY_NAME=Bizabode Digital
COMPANY_EMAIL=admin@bizabode.com
COMPANY_PHONE=+1-555-0123
COMPANY_ADDRESS=123 Business St, City, State 12345

# Feature Flags
ENABLE_EMPLOYEE_MODULE=true
ENABLE_INVENTORY_MODULE=true
ENABLE_CRM_MODULE=true
ENABLE_ACCOUNTING_MODULE=true
ENABLE_REPORTING_MODULE=true
ENABLE_NOTIFICATIONS=true

# License Configuration
LICENSE_KEY=DEMO-LICENSE-KEY-2024
LICENSE_TYPE=demo
LICENSE_EXPIRES=2025-12-31

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Development/Testing (Set to false in production)
DEBUG_MODE=false
ENABLE_DEBUG_ROUTES=false
MOCK_PAYMENTS=false

# External Services (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Social Login (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_TIMEOUT=30000

# Performance Settings
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Database Optimization
DB_POOL_SIZE=10
DB_POOL_MIN=2
DB_POOL_MAX=20

# Error Handling
ERROR_REPORTING=true
ERROR_EMAIL=errors@bizabode.com
SENTRY_DSN=your_sentry_dsn_here

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Timezone
TZ=UTC

# Memory Settings
NODE_OPTIONS=--max-old-space-size=2048

# Docker Settings
DOCKER_NETWORK=bizabode_network
DOCKER_VOLUME_PREFIX=bizabode

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# HSTS Settings
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

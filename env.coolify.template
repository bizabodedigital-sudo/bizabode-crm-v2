# ===========================================
# BIZABODE CRM - COOLIFY DEPLOYMENT CONFIG
# ===========================================
# Copy this file to .env and update the values
# Then add these as Environment Variables in Coolify

# === APP CONFIGURATION ===
NODE_ENV=production
PORT=3000

# === AUTHENTICATION & SECURITY ===
NEXTAUTH_SECRET=your-super-secret-nextauth-key-here
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# === URLS & DOMAINS ===
NEXTAUTH_URL=https://crm.yourdomain.com
NEXT_PUBLIC_API_BASE_URL=https://crm.yourdomain.com/api

# === DATABASE CONFIGURATION ===
MONGO_ROOT_PASSWORD=your-super-secure-mongodb-password
MONGO_DATABASE=bizabode_crm

# === REDIS CONFIGURATION ===
REDIS_URL=redis://redis:6379

# === EMAIL CONFIGURATION (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# === WHATSAPP BUSINESS API (Optional) ===
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-phone-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# === LICENSE CONFIGURATION ===
LICENSE_KEY=your-license-key-here

# === PERFORMANCE & MONITORING ===
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
LOG_LEVEL=info

# === BUSINESS CONFIGURATION ===
COMPANY_NAME=Your Company Name
COMPANY_EMAIL=admin@yourdomain.com
COMPANY_PHONE=+1234567890
COMPANY_ADDRESS=Your Business Address

# === FEATURE FLAGS ===
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WHATSAPP_INTEGRATION=false
ENABLE_ANALYTICS=true
ENABLE_BACKUP=true

# === BACKUP CONFIGURATION ===
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# === SECURITY SETTINGS ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_TIMEOUT=86400000
PASSWORD_MIN_LENGTH=8

# === INTEGRATION SETTINGS ===
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=
HOTJAR_ID=

# === DEVELOPMENT/DEBUG (Set to false in production) ===
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_DEBUG_ROUTES=false
